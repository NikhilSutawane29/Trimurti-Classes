# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Configuration
MONGO_URI=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Email Configuration (Nodemailer - for password reset, contact forms, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=noreply@trimurticlasses.com
FROM_NAME=Trimurti Classes

# Email Service Configuration (used by emailService.js)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
OWNER_EMAIL=your_email@gmail.com

# Admin Configuration
ADMIN_EMAIL=admin@trimurticlasses.com
ADMIN_PASSWORD=create_a_strong_password_here
